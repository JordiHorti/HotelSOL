<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="HotelSOL" namespace="HotelSOL.Models">

	<class name="Invoice" table="invoices">
		<id name="invoices_id" column="invoices_id" type="Int32">
			<generator class="identity"/>
		</id>
		<property name="bookings_id" column="bookings_id"/>
		<property name="customer_id" column="customer_id"/>
		<property name="customerName" column="customerName"/>
		<property name="customerEmail" column="customerEmail"/>
		<property name="customerPhone" column="customerPhone"/>
		<property name="roomNumber" column="roomNumber"/>
		<property name="roomType" column="roomType"/>
		<property name="roomCapacity" column="roomCapacity"/>
		<property name="roomPrice" column="roomPrice"/>
		<property name="service" column="service"/>
		<property name="servicePrice" column="servicePrice"/>
		<property name="checkIn" column="checkIn"/>
		<property name="checkOut" column="checkOut"/>
		<property name="days" column="days"/>
		<property name="totalPrice" column="totalPrice"/>
	</class>

</hibernate-mapping>
