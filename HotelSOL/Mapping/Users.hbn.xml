<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="HotelSOL" namespace="HotelSOL.Models">

	<class name="HotelSOL.Models.User, HotelSOL" table="users">
		<id name="user_id" column="users_id" type="Int32">
			<generator class="identity" />
		</id>
		<property name="userName" column="userName" type="String" />
		<property name="password" column="password" type="String" />
		<property name="user_role" column="user_role" type="Int32" />
	</class>

</hibernate-mapping>
